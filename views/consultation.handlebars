<main class="d-flex flex-column">
  <header class="policyReviewHeader">
    <h1>FREE CONSULTATION</h1></header>
  <h4>REQUEST FOR A CONSULTATION</h4>
  <form id="consultForm" class="text-left w-75">
    <div id="formBody">
      {{! TYPE }}
      <div class="mb-3">
        <label for="type">WHAT TYPE OF CONSULTATION WOULD YOU LIKE?</label>
        <select name="type" id="type" class="form-select" style="color:black">
          <option value="placeholder" selected></option>
          <option value="phone">PHONE</option>
          <option value="in person">FACE TO FACE</option>
          <option value="other">OTHER</option>
        </select>
      </div>
      {{! NAME }}
      <div class="mb-3">
        <label for="inputName" class="form-label">NAME</label>
        <input
          type="text"
          class="form-control"
          id="inputName"
          placeholder="First Last"
          required
        />
      </div>
      {{! EMAIL }}
      <div class="mb-3">
        <label for="inputEmail" class="form-label">EMAIL ADDRESS</label>
        <input
          type="email"
          class="form-control"
          id="inputEmail"
          aria-describedby="emailHelp"
          placeholder="me@gmail.com"
          required
        />
      </div>
      {{! PHONE }}
      <div class="mb-3">
        <label for="inputPhone" class="form-label">PHONE</label>
        <input
          type="tel"
          class="form-control"
          id="inputPhone"
          placeholder="(303)-333-1234"
          required
        />
      </div>
      {{! MESSAGE BODY }}
      <div class="mb-3">
        <label for="inputMessage" class="form-label">WHAT WOULD YOU LIKE TO
          DISCUSS?</label>
        <textarea
          id="inputMessage"
          name="inquiry"
          cols="40"
          rows="5"
          class="form-control"
          placeholder="Ex:  I need proof of insurance to buy a car."
          required
        ></textarea>
      </div>
      <button type="submit" class="btn btn-danger">Submit</button>
    </div>
    <h4 id="successMessage" style="display:none; text-align:center;">Form
      successfully submitted. We'll get back to you ASAP.</h4>
  </form>
</main>
<script src="/js/services/consult.js"></script>