<main id="formContainer" class="d-flex flex-column">
  <header class="policyReviewHeader">
    <h1>POLICY REVIEW</h1></header>
  <h4>REQUEST A POLICY REVIEW</h4>
  <form id="policyReviewForm" class="w-50 text-left">
    <div id="formBody">
      {{! NAME }}
      <div class="mb-3">
        <label for="inputName" class="form-label required">NAME</label>
        <input
          type="text"
          class="form-control"
          id="inputName"
          placeholder="First Last"
          required
        />
      </div>
      {{! EMAIL }}
      <div class="mb-3">
        <label for="inputEmail" class="form-label required">EMAIL ADDRESS</label>
        <input
          type="email"
          class="form-control"
          id="inputEmail"
          aria-describedby="emailHelp"
          placeholder="me@gmail.com"
          required
        />
      </div>
      {{! PHONE }}
      <div class="mb-3">
        <label for="inputPhone" class="form-label required">PHONE</label>
        <input
          type="tel"
          class="form-control"
          id="inputPhone"
          placeholder="Ex: (303)-333-1234"
          required
        />
      </div>
      {{! MESSAGE BODY }}
      <div class="mb-3">
        <label for="inputMessage" class="form-label required">WHAT WOULD YOU
          LIKE TO DISCUSS?</label>
        <textarea
          id="inputMessage"
          name="inquiry"
          cols="40"
          rows="5"
          class="form-control"
          placeholder="Ex:  I'd like to get an auto insurance quote."
          required
        ></textarea>
      </div>
      <button type="submit" class="btn btn-danger">Submit</button>
    </div>
    <h4 id="successMessage" style="display:none; text-align:center;">Form
      successfully submitted. We'll get back to you ASAP.</h4>
  </form>

</main>
<script src="/js/services/policyReview.js"></script>